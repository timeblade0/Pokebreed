//run in shop buttons that create sub menues

function scp_shop_define_col_row(){
	offset=110
	menu_col[1]=obj_shop_main.x+20
	menu_col[2]=menu_col[1]+offset
	menu_col[3]=menu_col[2]+offset
	menu_col[4]=menu_col[3]+offset
	menu_col[5]=menu_col[4]+offset
	menu_col[6]=menu_col[5]+offset
	menu_col[7]=menu_col[6]+offset
	menu_col[8]=menu_col[7]+offset

	menu_row[1]=obj_shop_main.y+20
	menu_row[2]=menu_row[1]+offset
	menu_row[3]=menu_row[2]+offset
	menu_row[4]=menu_row[3]+offset
	menu_row[5]=menu_row[4]+offset
	menu_row[6]=menu_row[5]+offset
	menu_row[7]=menu_row[6]+offset
	menu_row[8]=menu_row[7]+offset
	menu_row[9]=menu_row[8]+offset
}